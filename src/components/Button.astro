---
interface Props {
  href: string;
  style?: "primary" | "link";
}

const { href, style } = Astro.props;
---

{
  style == "primary" || style == null ? (
    <a
      href={href}
      class="inline-flex items-center gap-2 rounded-xl bg-yellow-300 px-4 py-2 font-medium text-black shadow-xl transition-all hover:-translate-y-1"
    >
      <slot> Button </slot>
    </a>
  ) : (
    <a
      href={href}
      class="inline-flex items-center gap-2 rounded-xl bg-transparent px-4 py-2 font-medium transition-all hover:-translate-y-1 hover:bg-white hover:text-black hover:shadow-xl"
    >
      <slot> Button </slot>
    </a>
  )
}
